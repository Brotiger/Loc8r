extends layout

include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-8.my-2
        h1.mb-0= pageHeader.title
          small &#32; - #{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each location in locations
          .col-xs-12.list-group-item
            .d-flex.justify-content-between.align-items-center
              h4
                a(href='/location')= location.name
                small &nbsp;
                  +outputRating(location.rating)
              span.float-end.bg-info.text-light.p-1.px-2.rounded-1= location.distance
            p.address= location.address
            .d-flex.justify-content-start.flex-wrap
              each facility in location.facilities
                .bg-primary.p-1.px-2.me-1.mb-1.text-light.rounded-1
                  i.fas.fa-check &#32; #{facility}
